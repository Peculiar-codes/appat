extend layout

block content
 div(class="h-screen w-screen flex justify-center align-center")
  form(method="POST" action="/rooms/addRoom" class="rounded-3xl shadow-2xl h-1/2 w-34 p-4 border-2")
   div(class="outline-0")
    input(name="name" id="name")
   button(id="createRoom" class="border-2 rounded" type="submit") Create
 script.
   console.log(user)
   let createRoom= document.querySelector("#createRoom")
   createRoom.addEventListener("click",()=>{
     let name = document.querySelector("#name")
     socket.emit("addRoom",name.value)
     socket.on("room added",room=>{
       window.location.replace(`rooms/room/${room._id}`)
     })
     })